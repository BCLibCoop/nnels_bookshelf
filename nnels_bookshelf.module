/*
 * Implementation of hook_views_api()
 *
 */

function nnels_bookshelf_views_api() {
  return array('api' => 3.0);
}

/**
 * Implements hook_block_info()
 *
 */

function nnels_bookshelf_block_info() {

	$blocks = array();

  $blocks[SLUG . '_button'] = array(
    'info' => t('My Bookshelf button'),
    'cache' => DRUPAL_CACHE_PER_USER,
    'region' => 'Header',
    'visibility' => BLOCK_VISIBLITY_NOTLISTED,
    'weight' => -35,
    );

  return $blocks;
}

/**
 * Implements hook_block_view
 *
 */

function nnels_bookshelf_block_view( $delta = '' ) {
  
  $block = array();

  if ($delta = SLUG . '_button') {
  	global $user;

  	$block['subject'] = '';
  	$block['content'] = "<a href='/user/" . $user->uid . "/" . SLUG  . "'><i class='fa fa-list-alt' alt='My Bookshelf Icon' aria-hidden='true'></i> My Bookshelf</a>";

  	return $block;
  }
}

/**
 * Implements hook_action_info()
 *
 */

function nnels_bookshelf_action_info() {
	return array(
		'nnels_'.SLUG.'_clear_all_user_flags' => array(
			'type' => 'node',
			'label' => t('Clear this ' . SLUG),
			'configurable' => FALSE,
			'triggers' => array('any'),
			'aggregate' => TRUE,
			'permissions' => array( 'access content' ),
			)

		);
}

//Provides action to clear current user's bookshelf
function nnels_bookshelf_clear_all_user_flags( &$node, $context ) {

	global $user;
	$uid = $user->uid;

	$entity_id = NULL;
	$entity_type = 'node';

 	$flagged_items = flag_get_user_flags( $entity_type, $entity_id, $uid );
  if ( empty($flagged_items) ) return;

  $flag = flag_get_flag( SLUG );

  foreach($flagged_items[ SLUG ] as $nid => $obj) {
    $flag->flag('unflag', $nid);
    //return TRUE;
  }
  drupal_set_message("Cleared your " . SLUG);
}
